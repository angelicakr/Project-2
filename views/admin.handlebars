<h1>Dogs!</h1>

<h2>Dogs that are not adopted!</h2>

<ul>
  {{#each dogs}}
    {{#unless adopted}}
      {{> dogs/dog-block adopt=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Dogs that are adopted!</h2>

<ul>
  {{#each dogs}}
    {{#if adopted}}
      <h2>{{dogs.name}}</h2>
      {{> dogs/dog-block adopt=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a dog</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Dog Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="adopted">Adopted?</label><br>
    <input type="radio" name="adopted" value="1" checked> Adopted!<br>
    <input type="radio" name="adopted" value="0"> Not adopted
  </div>
  
  <div class="form-group">
    <label for="q1">Age:</label>
    <input type="text" id="q1" name="age">
  </div>
    
  <div class="form-group">
    <label for="q2">Gender:</label>
    <input type="radio" name="gender" value="1"> Male<br>
    <input type="radio" name="gender" value="0" checked> Female
  </div>
    
  <div class="form-group">
    <label for="q3">Big dog experience:</label>
    <input type="radio" name="experience" value="1"> Giant breed experience required<br>
    <input type="radio" name="experience" value="0" checked> Not required
  </div>
    
  <div class="form-group">
    <label for="q4">Status:</label>
    <input type="text" id="q4" name="status">
  </div>
    
  <div class="form-group">
    <label for="q5">Good with other dogs:</label>
    <input type="text" id="q5" name="other_dogs">
  </div>
      
  <div class="form-group">
    <label for="q6">Good with cats:</label>
    <input type="text" id="q6" name="cats">
  </div>
      
  <div class="form-group">
    <label for="q7">Good with children:</label>
    <input type="text" id="q7" name="children">
  </div>
      
  <div class="form-group">
    <label for="q8">Amount/quantity:</label>
    <input type="text" id="q8" name="fur">
  </div>
      
  <div class="form-group">
    <label for="q9">Good with other dogs:</label>
    <input type="text" id="q9" name="other_dogs">
  </div>
      
  <div class="form-group">
    <label for="q10">Food motivated:</label>
    <input type="text" id="q10" name="food">
  </div>
      
  <div class="form-group">
    <label for="q11">How much exercise:</label>
    <input type="text" id="q11" name="exercise">
  </div>
      
  <div class="form-group">
    <label for="q12">Special needs:</label>
    <input type="text" id="q12" name="special">
  </div>
      
  <div class="form-group">
    <label for="q13">Size by ideal weight:</label>
    <input type="text" id="q13" name="size">
  </div>
      
  <div class="form-group">
    <label for="q14">Protective:</label>
    <input type="text" id="q14" name="protective">
  </div>
      
  <div class="form-group">
    <label for="q15">Link to picture:</label>
    <input type="text" id="q15" name="picture">
  </div>
      
  <div class="form-group">
    <label for="q16">Link to profile:</label>
    <input type="text" id="q16" name="profile">
  </div>

  <button type="submit">Add dog</button>
</form>
